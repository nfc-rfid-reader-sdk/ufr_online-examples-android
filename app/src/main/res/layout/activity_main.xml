<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaa"
    tools:context="MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginRight="95dp"
        android:onClick="sendMessage"
        android:text="GET UID" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginRight="95dp"
        app:srcCompat="@drawable/transparent_text_field" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="0dp"
        android:text="UID :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/portText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="95dp"
        android:ems="10"
        android:hint="Port"
        android:inputType="textPersonName" />

    <RadioButton
        android:id="@+id/udpRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:onClick="onUdpRadioButtonClicked"
        android:text="UDP" />

    <RadioButton
        android:id="@+id/httpRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:checked="true"
        android:onClick="onHttpRadioButtonClicked"
        android:text="HTTP" />

    <RadioButton
        android:id="@+id/tcpRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:onClick="onTcpRadioButtonClicked"
        android:text="TCP/IP" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="205dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnBeep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="95dp"
        android:onClick="onBeepClicked"
        android:text="BEEP" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:onClick="RefreshBroadcast"
        android:text="R"
        tools:layout_width="50dp" />

    <Spinner
        android:id="@+id/spinnerIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="200dp" />

</RelativeLayout>
